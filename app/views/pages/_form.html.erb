<%= form_for ([@book, @page]) do |f| %>
	<div class="field">
		<%= f.label :picture %><br>
		<%= f.file_field :thumbnail %>
	</div>
	<div class="field">
		<%= f.label :page_number %><br>
		<%= f.text_field :id %>
	</div>
	<div class="field">
		<%= f.label :description %><br>
		<%= f.text_area :description %>
	</div>
	<%= f.submit class: "button button_highlight button_block" %>
<% end %>