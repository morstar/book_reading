<div id="book_show">
	<div id="show_banner">
		<div class="wrapper_skinny">
			<p class="description"><%= @book.description %></p>
		</div>
	</div>

	<div id="breadcrumb">
		<%= link_to books_path do %>
			All books
			<span>/</span>
			<%= link_to @book.title, book_path(@book) %>
			<span>/</span>
			<%= @page.description %>
		<% end %>
	</div>

	<div id="pages">
		<div class="wrapper_skinny">
			<ul class="cf">
				<% @pages.each do |page| %>
					<li class="cf">
						<div class="page_thumbnail">
							<a href="#">
								<img src="">
							</a>
						</div>
						<div class="page_overview">
							<h2><%= link_to page.description, book_page_path(@book, page) %></h2>
						</div>
					</li>
				<% end %>
			</ul>
		</div>
	</div>
</div>